<%- include("partials/header2") %>
<body>
    <nav class="navbar">
        <ul>
            <li class="nav_item"><a href="/userHomepage">Home</a></li>
            <li class="nav_item"><a href="/dietPlan">Diet Plan</a></li>
            <li class="nav_item"><a href="/signOut">Sign Out</a></li>
        </ul>
    </nav>

    <div class="dietTableImage">
        <div class="dietImage">
            <img src="./Images/foodPyramid.webp" alt="" height="400px" width="500px">
        </div>

        <div class="dietTable">
            <table class="dietChart">
                <tr>
                    <th class="heading1"></th>
                    <th class="heading1">Foods</th>
                    <th class="heading1">Status</th>
                </tr>
                <tr>
                    <th>Breakfast</th>
                    <td class="foods">2 Eggs, Bread/Cereals, Fruits</td>
                    <td><button class="dietPlanButton">Incomplete</button></td>
                </tr>
                <tr>
                    <th>Lunch</th>
                    <td class="foods">Fruits, Meat/Fish, Vegetables, Rice(3 Spoons)</td>
                    <td><button class="dietPlanButton">Incomplete</button></td>
                </tr>
                <tr>
                    <th>Dinner</th>
                    <td class="foods">Meat/Fish, Vegetables, Bread, Milk</td>
                    <td><button class="dietPlanButton">Incomplete</button></td>
                </tr>
            </table>
        </div>
    </div>

    <div class="exerciseTableImage">

        <div class="exerciseTable">
            <table class="exerciseChart">
                <tr>
                    <th class="heading2">Exercises</th>
                    <th class="heading2">Duration/times</th>
                    <th class="heading2">Status</th>
                </tr>
                <tr>
                    <th>Walking</th>
                    <td class="duration">1 Hour</td>
                    <td><button class="dietPlanButton">Incomplete</button></td>
                </tr>
                <tr>
                    <th>Running</th>
                    <td class="duration">30 Minutes</td>
                    <td><button class="dietPlanButton">Incomplete</button></td>
                </tr>
                <tr>
                    <th>Push-up</th>
                    <td class="duration">5 Times</td>
                    <td><button class="dietPlanButton">Incomplete</button></td>
                </tr>
                <tr>
                    <th>Jumping Jacks</th>
                    <td class="duration">30 Seconds</td>
                    <td><button class="dietPlanButton">Incomplete</button></td>
                </tr>
                <tr>
                    <th>Plank</th>
                    <td class="duration">20 Seconds</td>
                    <td><button class="dietPlanButton">Incomplete</button></td>
                </tr>
                <tr>
                    <th>Heel Touch</th>
                    <td class="duration">20 Times</td>
                    <td><button class="dietPlanButton">Incomplete</button></td>
                </tr>
                <tr>
                    <th>Cobra Stretch</th>
                    <td class="duration">30 Seconds</td>
                    <td><button class="dietPlanButton">Incomplete</button></td>
                </tr>
            </table>
        </div>

        <div class="exerciseImage">
            <img src="./Images/exercise1.jpg" alt="" height="600px" width="600px">
        </div>
    
    </div>

    
    <script src="./js/index.js"></script>
</body>
</html>